<p id="notice"><%= notice %></p>

<div class="index_row clearfix">
    <h2 class="list_title">
      <%= link_to @list.title, @list %>
    </h2>
    <p class="list_sub_title">
      <%= @list.description %>
    </p>
</div>

<div id="items_wrapper">
  <%= render @list.items %>
  <div id="form">
    <%= render "items/form" %>
  </div>
</div>

<div class="links">
  <%= link_to 'Edit', edit_list_path(@list) %> |
  <%= link_to 'Destroy', @list, method: :delete, data: { confirm: 'Are you sure?' } %> |
  <%= link_to 'Back', lists_path %>
</div>
