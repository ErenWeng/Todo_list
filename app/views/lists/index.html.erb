<% @lists.each do |list| %>
  <div class="index_row clearfix">
    <h2 class="list_title">
      <%= link_to list.title, list %>
    </h2>
    <p class="list_sub_title">
      <%= list.description %>
    </p>
    <%= link_to 'Edit', edit_list_path(list) %> |<%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %>
  </div>
<% end %>

<div class="links">
  <%= link_to "New Todo List", new_list_path %>
</div>

